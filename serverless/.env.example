AWS_REGION=us-west-2
S3_BUCKET=your-s3-bucket-name
COGNITO_POOL_ID=your-cognito-user-pool-id
COGNITO_REGION=us-west-2
COGNITO_CLIENT_ID=your-cognito-app-client-id
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE
MEDIA_BUCKET=valine-media-uploads
JWT_SECRET=your-jwt-secret-key-change-in-production
STAGE=dev
NODE_ENV=development
COOKIE_DOMAIN=
FRONTEND_URL=http://localhost:5173

# Email Configuration (Phase 1)
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@projectvaline.com

# 2FA Configuration (Phase 2)
TWO_FACTOR_ENABLED=false

# Registration Control
# Set to 'true' to allow new user registrations
ENABLE_REGISTRATION=true
# Comma-separated list of allowed emails (leave empty for open registration)
ALLOWED_USER_EMAILS=

# CSRF Protection (Phase 3)
CSRF_ENABLED=false

# PR Intelligence (Phase 4)
PR_INTEL_ENABLED=false
PR_INTEL_WEBHOOK_SECRET=

# Flaky Test Detector (Phase 5)
FLAKY_DETECTOR_ENABLED=false

# Schema Diff Analyzer (Phase 6)
SCHEMA_DIFF_ENABLED=false

# Synthetic Journey (Phase 7)
SYNTHETIC_JOURNEY_ENABLED=false
SYNTHETIC_USE_REAL_REQUESTS=true
API_BASE_URL=http://localhost:3000

# Observability v2
OBSERVABILITY_ENABLED=true

# Analytics Privacy Stub Configuration
ANALYTICS_ENABLED=false
ANALYTICS_REQUIRE_CONSENT=true
ANALYTICS_PERSIST_ENABLED=true
ANALYTICS_STORAGE_DRIVER=postgres

# Dev Bypass Backend Flag (Future-proofing)
# Currently unused - dev bypass is pure frontend
# Set to 'true' to enable backend dev bypass endpoints when implemented
DEV_BYPASS_ENABLED=false

ANALYTICS_RETENTION_DAYS=30
ANALYTICS_ALLOWED_EVENTS=page_view,signup,login,profile_update,media_upload,logout
ANALYTICS_SAMPLING_RATE=1.0
ANALYTICS_CONSENT_COOKIE=analytics_consent

# Rate Limiting Configuration
REDIS_URL=
RATE_LIMITING_ENABLED=true

# Moderation MVP Configuration
MODERATION_ENABLED=false
MODERATION_ALERTS_ENABLED=false
MODERATION_STRICT_MODE=false
REPORTS_ENABLED=true
MODERATION_ALERT_CHANNEL_ID=
ADMIN_ROLE_IDS=
REPORTS_MAX_PER_HOUR=5
REPORTS_MAX_PER_DAY=20
REPORTS_IP_MAX_PER_HOUR=10
URL_ALLOWED_DOMAINS=imdb.com,youtube.com,vimeo.com,linkedin.com,github.com
URL_BLOCKED_DOMAINS=
URL_ALLOWED_PROTOCOLS=http:https:mailto:
PROFANITY_LIST_PATH=
PROFANITY_ACTION=block
REPORT_CATEGORY_ALLOWLIST=spam,abuse,unsafe_link,profanity,privacy,other

# Example values:
# S3_BUCKET=valine-uploads-dev
# MEDIA_BUCKET=valine-media-uploads-dev
# COGNITO_POOL_ID=us-west-2_XXXXXXXXX
# COGNITO_CLIENT_ID=XXXXXXXXXXXX
# DATABASE_URL=postgresql://dbuser:dbpass@dbhost:5432/valinedb
# JWT_SECRET=a-very-long-random-string-for-jwt-signing
# STAGE=dev
# NODE_ENV=production
# COOKIE_DOMAIN=.yourdomain.com (for cross-subdomain cookies in production)
# REDIS_URL=redis://localhost:6379 (local) or redis://your-elasticache-endpoint:6379 (AWS ElastiCache)
# RATE_LIMITING_ENABLED=true (set to false to disable rate limiting for testing)
# FRONTEND_URL=https://yourapp.com (production frontend URL)
# EMAIL_ENABLED=true (set to true to enable SMTP email sending)
# SMTP_HOST=smtp.sendgrid.net (or your SMTP provider)
# SMTP_PORT=587
# SMTP_USER=apikey (or your SMTP username)
# SMTP_PASS=your-smtp-password-or-api-key
# FROM_EMAIL=noreply@yourdomain.com
# TWO_FACTOR_ENABLED=true (set to true to enable 2FA endpoints)
# CSRF_ENABLED=true (set to true to enable CSRF token validation)# TWO_FACTOR_ENABLED=true (set to true to enable 2FA endpoints)
# CSRF_ENABLED=true (set to true to enable CSRF token validation)
# PR_INTEL_ENABLED=true (set to true to enable PR intelligence endpoints)
# PR_INTEL_WEBHOOK_SECRET=your-webhook-secret-hex-or-base64 (for GitHub Actions HMAC)
# FLAKY_DETECTOR_ENABLED=true (set to true to enable test result tracking)
# SCHEMA_DIFF_ENABLED=true (set to true to enable schema diff analyzer)
# SYNTHETIC_JOURNEY_ENABLED=true (set to true to enable synthetic journey endpoint)
# SYNTHETIC_USE_REAL_REQUESTS=true (set to false to use simulated requests for testing)
# OBSERVABILITY_ENABLED=true (set to true to enable observability endpoints)
# ANALYTICS_ENABLED=true (set to true to enable analytics event collection)
# ANALYTICS_REQUIRE_CONSENT=true (set to true to require user consent before tracking)
# ANALYTICS_PERSIST_ENABLED=true (set to true to persist events to database)
# ANALYTICS_STORAGE_DRIVER=postgres (postgres or dynamodb)
# ANALYTICS_RETENTION_DAYS=30 (number of days to retain analytics events)
# ANALYTICS_ALLOWED_EVENTS=page_view,signup,login,profile_update,media_upload,logout
# ANALYTICS_SAMPLING_RATE=1.0 (0.0-1.0, fraction of events to capture)
# ANALYTICS_CONSENT_COOKIE=analytics_consent (cookie name for consent tracking)
