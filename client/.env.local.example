# ============================================
# Local Development Environment
# ============================================
#
# Copy to .env.local for local dev
# cp client/.env.local.example client/.env.local
#
# ⚠️ NEVER COMMIT .env.local TO GIT
#

# DEV BYPASS MODE - Auto-login without authentication
# ⚠️ NEVER SET THIS IN PRODUCTION
VITE_DEV_BYPASS_AUTH=true

# Legacy dev bypass flag (kept for compatibility)
VITE_ENABLE_DEV_BYPASS=true

# API endpoint (local or staging)
VITE_API_BASE=http://localhost:3001

# Disable auth enforcement for local development
VITE_ENABLE_AUTH=false

# Frontend URL for CORS
VITE_FRONTEND_URL=http://localhost:5173

# Disable analytics in dev
VITE_ANALYTICS_ENABLED=false
